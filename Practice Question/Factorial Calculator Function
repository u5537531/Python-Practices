def calculate_factorial(number):
    # Handling edge cases for 0 and negative inputs
    if number < 0:
        return "Invalid input. Factorial is not defined for negative numbers."
    if number == 0:
        return 1

    # Calculate factorial using a for loop
    factorial = 1
    for i in range(1, number + 1):
        factorial *= i
    return factorial

# Example Test Cases
print(calculate_factorial(5))   # Test case 1
print(calculate_factorial(0))   # Test case 2
print(calculate_factorial(3))   # Test case 3
print(calculate_factorial(-1))  # Test case 4


def is_leap_year(year):
    # Check if the year is a leap year
    if (year % 4 == 0 and year % 100 != 0) or (year % 400 == 0):
        return True
    else:
        return False

# Example Test Cases
print(is_leap_year(2020))  # Test case 1
print(is_leap_year(1900))  # Test case 2
print(is_leap_year(2000))  # Test case 3
print(is_leap_year(2019))  # Test case 4

